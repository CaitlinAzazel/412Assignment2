<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.assignment2">

    <!-- 1. Custom dangerous permission definition -->
    <permission
        android:name="com.example.assignment2.MSE412"
        android:protectionLevel="dangerous" />

    <!-- 2. App declares it wants to use the permission -->
    <uses-permission android:name="com.example.assignment2.MSE412" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Assignment2">

        <!-- Main Activity (launcher) -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- 3. Protect SecondActivity with the custom permission -->
        <activity
            android:name=".SecondActivity"
            android:exported="true"
            android:permission="com.example.assignment2.MSE412">
            <intent-filter>
                <action android:name="com.example.assignment2.SHOW_SECOND"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>

        <!-- Image Activity -->
        <activity android:name=".ViewImageActivity" />

    </application>

</manifest>
